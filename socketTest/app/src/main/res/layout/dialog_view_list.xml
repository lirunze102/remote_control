        android:layout_height="wrap_content"
        android:text="电脑打开"
        android:id="@+id/dialog_bt1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载文件"
        android:id="@+id/dialog_bt2"/>
